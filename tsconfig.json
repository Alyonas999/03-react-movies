{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "src/services/SearchBar", "src/components/App/MovieModal", "src/components/Esrc/components/Error, "Loader", "ErrorMessage"Message/Loaderssage", "src/components/App/Loader", "src/components/App/SearchBar", "src/components/App/MovieGrid", "src/components/App/SearchBar"]
}